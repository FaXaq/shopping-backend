                      },
                      "image": {
                        "type": "string",
                        "description": "The image URL of the product"
                      },
                      "rating": {
                        "type": "object",
                        "properties": {
                          "rate": {
                            "type": "number",
                            "description": "The rating of the product"
                          },
                          "count": {
