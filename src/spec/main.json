  "paths": {
    "/products": {
      "get": {
        "deprecated": false,
        "description": "Will return an array of products.",
        "responses": {
          "200": {
            "description": "Successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
